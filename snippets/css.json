{
	"Commandes CSS": {
		"prefix": "css",
		"body": [
			"* {",
			"\t$2",
			"}"
		],
		"description": "Règle CSS générique"
	},
	"Couleur de texte": {
		"prefix": "col",
		"body": [
			"p {",
			"color: $1;",
			"}"
		],
		"description": "Définir la couleur du texte"
	},

	"Fond de page": {
		"prefix": "backg",
		"body": [
			"body {",
			"background: url($1);",
			"}"
		],
		"description": "Définir le fond de la page"
	},

	"Taille de police": {
		"prefix": "size",
		"body": [
			"p {",
			"font-size: $1;",
			"}"
		],
		"description": "Définir la taille de la police"
	},

	"Centrer un élément": {
		"prefix": "center",
		"body": [
			"div {",
			"margin-left: auto;",
			"margin-right: auto;",
			"}"
		],
		"description": "Centrer un élément"
	},

	"Marge extérieure": {
		"prefix": "margin",
		"body": [
			"div {",
			"margin: $1;",
			"}"
		],
		"description": "Définir la marge extérieure"
	},

	"Marge intérieure": {
		"prefix": "padding",
		"body": [
			"div {",
			"padding: $1;",
			"}"
		],
		"description": "Définir la marge intérieure"
	},

	"Bordure": {
		"prefix": "border",
		"body": [
			"div {",
			"border: $1;",
			"}"
		],
		"description": "Définir une bordure"
	},

	"Texte gras": {
		"prefix": "bold",
		"body": [
			"p {",
			"font-weight: bold;",
			"}"
		],
		"description": "Texte en gras"
	},

	"Texte italique": {
		"prefix": "italic",
		"body": [
			"p {",
			"font-style: italic;",
			"}"
		],
		"description": "Texte en italique"
	}, 

	"Texte souligné": {
		"prefix": "underline",
		"body": [
			"p {",
			"text-decoration: underline;",
			"}"
		],
		"description": "Texte souligné"
	},

	"Alignement du texte - Gauche": {
		"prefix": "left",
		"body": [
			"p {",
			"text-align: left;",
			"}"
		],
		"description": "Aligner le texte à gauche"
	},
	"Largeur de l'élément": {
		"prefix": "width",
		"body": [
			"img {",
			"width: $1;",
			"}"
		],
		"description": "Définir la largeur de l'élément"
	},

	"Hauteur de l'élément": {
		"prefix": "height",
		"body": [
			"img {",
			"height: $1;",
			"{"
		],
		"description": "Définir la hauteur de l'élément"
	},
	"Centrer une image horizontalement": {
		"prefix": "centerImg",
		"body": [
			" img {",
			"display: block;",
			"margin: 0 auto;",
			"}"
		],
		"description": "Centrer une image horizontalement"
	},
	"Style footer": {
		"prefix": "styleFoot",
		"body": [
			"footer: {",
				"margin-top: 4rem",
				"padding: 20px",
				"text-align: center",
				"color: #767676",
				"box-shadow: 0 2px 5px 0 rgba(0,0,0,0.75)",
			  "},",
			  "contenu_Footer {",
				"display: flex",
				"justify-content: center",
			  "},",
			  "footer_Section {",
				"flex: 1",
				"margin: 0 40px",
				"max-width: 300px",
			  "}"
		],
		"description": "Style footer"
	},
	"Documentation CSS": {
		"prefix": "docCSS",
		"body": [
			"/*",
			"Le CSS est un langage qui permet de créer des pages web à l'apparence soignée.",
			"CSS est un langage basé sur des règles — on définit des règles de styles destinées à des éléments ou des groupes d'éléments particuliers dans la page",
			"*/"
		],
		"description": "Documentation CSS"
	},
	"Responsive avec Media Query": {
		"prefix": "media",
		"body": [
			"@media screen and (max-width: $1) {",
			"\t$2",
			"}"
		],
		"description": "Responsive avec Media Query"
	},
	"Déclaration d'une classe": {
		"prefix": "class",
		"body": [
			".${1:nom_classe} {",
			"\t$2",
			"}"
		],
		"description": "Déclaration d'une classe"
	},
	"Style grille": {
		"prefix": "stylePart",
		"body": [
			".container {",
			"\tdisplay: flex;",
			"\tjustify-content: space-between;",
			"}",
			".item {",
			"\twidth: 48%; /* Vous pouvez ajuster la largeur en fonction de vos besoins */",
			"}"
		],
		"description": "Style 2 parties"
	},
	"KeyFrames": {
		"prefix": "keyframes",
		"body": [
			"@keyframes ${1:nom_animation} {",
			"\t0% {",
			"\t\t$2",
			"\t}",
			"\t100% {",
			"\t\t$3",
			"\t}",
			"}"
		],
		"description": "KeyFrames"
	},
	"Animation": {
		"prefix": "animation",
		"body": [
			"animation: ${1:nom_animation} ${2:temps} ${3:nombre} ${4:temps} ${5:nombre} ${6:mode} ${7:nombre} ${8:mode};"
		],
		"description": "Animation"
	},
	"Gradient": {
		"prefix": "gradient",
		"body": [
			"background: linear-gradient(to ${1:direction}, ${2:couleur1}, ${3:couleur2});"
		],
		"description": "Gradient"
	}
}