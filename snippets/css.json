{
	"Commandes CSS": {
		"prefix": "css",
		"body": [
			"* {",
			"\t$2",
			"}"
		],
		"description": "Règle CSS générique"
	},
	"Couleur de texte": {
		"prefix": "col",
		"body": [
			"p {",
			"color: $1;",
			"}"
		],
		"description": "Définir la couleur du texte"
	},

	"Fond de page": {
		"prefix": "backg",
		"body": [
			"body {",
			"background: url($1);",
			"}"
		],
		"description": "Définir le fond de la page"
	},

	"Taille de police": {
		"prefix": "size",
		"body": [
			"p {",
			"font-size: $1;",
			"}"
		],
		"description": "Définir la taille de la police"
	},

	"Centrer un élément": {
		"prefix": "center",
		"body": [
			"div {",
			"margin-left: auto;",
			"margin-right: auto;",
			"}"
		],
		"description": "Centrer un élément"
	},

	"Marge extérieure": {
		"prefix": "margin",
		"body": [
			"div {",
			"margin: $1;",
			"}"
		],
		"description": "Définir la marge extérieure"
	},

	"Marge intérieure": {
		"prefix": "padding",
		"body": [
			"div {",
			"padding: $1;",
			"}"
		],
		"description": "Définir la marge intérieure"
	},

	"Bordure": {
		"prefix": "border",
		"body": [
			"div {",
			"border: $1;",
			"}"
		],
		"description": "Définir une bordure"
	},

	"Texte gras": {
		"prefix": "bold",
		"body": [
			"p {",
			"font-weight: bold;",
			"}"
		],
		"description": "Texte en gras"
	},

	"Texte italique": {
		"prefix": "italic",
		"body": [
			"p {",
			"font-style: italic;",
			"}"
		],
		"description": "Texte en italique"
	}, 

	"Texte souligné": {
		"prefix": "underline",
		"body": [
			"p {",
			"text-decoration: underline;",
			"}"
		],
		"description": "Texte souligné"
	},

	"Alignement du texte - Gauche": {
		"prefix": "left",
		"body": [
			"p {",
			"text-align: left;",
			"}"
		],
		"description": "Aligner le texte à gauche"
	},
	"Largeur de l'élément": {
		"prefix": "width",
		"body": [
			"img {",
			"width: $1;",
			"}"
		],
		"description": "Définir la largeur de l'élément"
	},

	"Hauteur de l'élément": {
		"prefix": "height",
		"body": [
			"img {",
			"height: $1;",
			"{"
		],
		"description": "Définir la hauteur de l'élément"
	},
	"Centrer une image horizontalement": {
		"prefix": "centerImg",
		"body": [
			" img {",
			"display: block;",
			"margin: 0 auto;",
			"}"
		],
		"description": "Centrer une image horizontalement"
	},
	"Style footer": {
		"prefix": "styleFooter",
		"body": [
			"footer: {",
				"margin-top: 4rem",
				"padding: 20px",
				"text-align: center",
				"color: #767676",
				"box-shadow: 0 2px 5px 0 rgba(0,0,0,0.75)",
			  "},",
			  "contenu_Footer {",
				"display: flex",
				"justify-content: center",
			  "},",
			  "footer_Section {",
				"flex: 1",
				"margin: 0 40px",
				"max-width: 300px",
			  "}"
		]
	}
}